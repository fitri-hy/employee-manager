<header class="w-full p-5 bg-white dark:bg-slate-800 shadow flex justify-between">
	<div class="flex items-center gap-2">
		
		<button id="menu-toggle" class="md:hidden dark:text-white hover:scale-105 hover:text-gray-700 dark:hover:text-gray-100">
			<i class="fa-solid fa-bars text-xl"></i>
		</button>
		
		<div class="text-gray-600 font-bold text-xl flex items-center gap-2">
			<i class="fa-regular fa-clock text-2xl"></i> <span id="clock"></span>
		</div>
		
	</div>
	<div class="flex items-center gap-4">
		
		<button id="dark-mode-toggle" class="hover:scale-105">
			<i id="dark-mode-icon" class="text-amber-500 fas fa-sun transition-colors duration-300 text-2xl"></i>
		</button>
		
		<div class="relative inline-block text-left">
			<div class="flex items-center gap-2 bg-gray-100 pl-1 pr-4 py-[3px] rounded-full border border-gray-200 dark:bg-slate-900 dark:border-slate-700 cursor-pointer" onclick="toggleDropdown()">
				<img src="/assets/img/users/<%= user.picture %>" alt="<%= user.picture %>" class="h-7 w-7 object-cover rounded-full">
				<span class="font-semibold">
					<%= user.username %>
				</span>
			</div>
			<div id="userDropdownMenu" class="hidden absolute z-50 right-0 mt-2 w-48 rounded-md shadow-lg bg-white dark:bg-slate-800 border border-gray-300 dark:border-slate-600">
				<div class="p-2" role="menu" aria-orientation="vertical" aria-labelledby="dropdown-button">
					<a href="/admin/profile" class="rounded block flex items-center gap-2 px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-slate-700" role="menuitem">
						<i class="fa-regular fa-user"></i> 
						Profile
					</a>
					<a href="/logout" class="rounded text-rose-600 block flex items-center gap-2 px-4 py-2 text-sm dark:text-rose-50 hover:bg-gray-100 dark:hover:bg-slate-700" role="menuitem">
						<i class="fa-solid fa-arrow-right-from-bracket"></i>
						Logout
					</a>
				</div>
			</div>
		</div>
		
	</div>
</header>