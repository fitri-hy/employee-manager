<header class="w-full p-5 bg-white dark:bg-slate-800 shadow flex justify-between">
	<div class="flex items-center gap-2">
		<button id="menu-toggle" class="md:hidden dark:text-white hover:scale-105 hover:text-gray-700 dark:hover:text-gray-100">
			<i class="fa-solid fa-bars text-xl"></i>
		</button>
		<h2 class="font-bold text-xl">
			Dashboard
		<h2>
	</div>
	<div class="flex items-center gap-4">
		<button id="dark-mode-toggle" class="hover:scale-105">
			<i id="dark-mode-icon" class="text-amber-500 fas fa-sun transition-colors duration-300 text-2xl"></i>
		</button>
		<div class="flex items-center gap-2 bg-gray-100 pl-1 pr-4 py-[3px] rounded-full border border-gray-200 dark:bg-slate-900 dark:border-slate-700">
			<img src="/assets/img/user.png" alt="user" class="h-7 w-7 object-cover">
			<span class="font-semibold">
				<%= user.username %>
			</span>
		</div>
		<a href="/logout" class="text-rose-600 dark:text-rose-500 hover:scale-105 hover:text-rose-500 dark:hover:text-rose-600">
			<i class="fa-solid fa-arrow-right-from-bracket text-xl"></i>
		</a>
	</div>
</header>