{
  "name": "employee-manager",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "npm run build:css && node app.js",
    "dev": "concurrently \"npm run watch:css\" \"nodemon app.js\"",
    "build:css": "npx postcss public/assets/css/tailwind.css -o public/assets/css/styles.css",
    "watch:css": "npx postcss public/assets/css/tailwind.css -o public/assets/css/styles.css --watch"
  },
  "keywords": [],
  "author": "I-As.Dev",
  "license": "MIT",
  "description": "Aplikasi web pengelolaan karyawan (Employee Manager) multi users dengan menggunakan teknologi NodeJS.",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^9.0.1",
    "connect-flash": "^0.1.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "mysql2": "^3.11.3",
    "nodemon": "^3.1.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.13"
  }
}
